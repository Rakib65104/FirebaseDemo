<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aydin.firebasedemo.WelcomeController" alignment="CENTER" spacing="20.0">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Welcome" />

    <TextField fx:id="emailTextField" promptText="Enter Email" />
    <TextField fx:id="passwordTextField" promptText="Enter Password" />

    <Button fx:id="signInButton" text="Sign In" onAction="#signInButtonClicked"/>
    <Button fx:id="registerButton" text="Register" onAction="#registerButtonClicked"/>

</VBox>
