<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aydin.firebasedemo.PrimaryController" alignment="CENTER" spacing="20.0">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Firebase Data Access" />

    <TextField fx:id="nameTextField" promptText="Name" />
    <TextField fx:id="ageTextField" promptText="Age" />
    <TextField fx:id="phoneTextField" promptText="Phone Number" />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="readButton" text="Read" onAction="#readButtonClicked"/>
        <Button fx:id="writeButton" text="Write" onAction="#writeButtonClicked"/>
    </HBox>

    <TextArea fx:id="outputTextArea" prefHeight="200.0" prefWidth="500.0"/>

</VBox>
